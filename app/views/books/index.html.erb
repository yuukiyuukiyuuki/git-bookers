<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
   <tr>
     <td><%=book.title %></td>
     <td><%=book.body %></td>
     <th clospan="3"></th>
     <th><%= link_to 'Show',"/books/creates" %></th>
     <th><%= link_to 'Edit',"books/creates/edit" %></th>
   </tr>

  <% end %>
    </tr>
  </tbody>
</table>



    <h1>New book</h1>
    <!-- form_with部分 -->
    <%=form_with model: @book do |f| %>
     <h4>Title</h4>
     <%=f.text_field:title%>

     <h4>Body</h4>
     <%=f.text_area:body%>

    <%=f.submit'Create Book'%>
  <% end %>


